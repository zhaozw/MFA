

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOver" >


    <Button
     android:id="@+id/StartColorsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
       android:onClick="onClick"
        android:text="Colors" />

    <Button
        android:id="@+id/StartSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/StartColorsActivity"
        android:layout_alignBottom="@+id/StartColorsActivity"
        android:layout_marginLeft="47dp"
        android:layout_toRightOf="@+id/StartColorsActivity"
        android:onClick="onClick"
        android:text="Settings" />

    <Button
        android:id="@+id/StartShipsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/StartColorsActivity"
        android:layout_alignBottom="@+id/StartColorsActivity"
        android:layout_marginRight="36dp"
        android:layout_toLeftOf="@+id/StartColorsActivity"
        android:onClick="onClick"
        android:text="Ships" />

</RelativeLayout>